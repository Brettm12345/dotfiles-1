" ==Vimperator_Color_Scheme==
" name: Base16 Ocean dark
" url: http://code.google.com/p/vimperator-labs/issues/detail?id=280&q=label%3Aproject-vimperator%20label%3Atype-colorscheme&colspec=ID%20Summary%20Project%20Type%20Status%20Priority%20Stars%20Owner
" modified by tudurom for the rainbou config generator
" ==Ocean_Colorscheme_Settings==

"StatusLine settings
hi StatusLine           color: #c7fefe; background: #0b2830; font-size: 8pt; font-family: monospace;

"CmdLine settings excluding Gradient
hi Normal               color: #c7fefe; background: #0b2830;
hi CmdLine              background: #0b2830; color: #c7fefe; font-family: monospace; font-size: 8pt;
hi CompDesc             color: #c7fefe; width: 50%; font-family: monospace; font-size: 8pt;
hi CompIcon             width: 16px; min-width: 16px; display: inline-block; margin-right: .5ex;
hi CompItem[selected]   background: #0b2830; color: #f973b4; font-family: monospace;
hi CompMsg              font-family: monospace; font-style: monospace; margin-left: 16px; font-size: 8pt;
hi CompResult           width: 45%; overflow: hidden;font-size: 8pt; font-family: monospace; font-weight: normal;
hi CompTitle            color: $c7fefe; background: #0b2830; font-weight: bold; font-family: monospace; font-size: 8pt;
hi CompTitle>*          padding: 0 .5ex; font-family: monospace; font-size: 8pt;
hi Filter               font-weight: bold;color: #c7fefe; font-family: monospace; font-size: 8pt;

"Used with ]f and [f
hi FrameIndicator       background-color: #0b2830; opacity: 0.5; z-index: 999; position: fixed; top: 0; bottom: 0; left: 0; right: 0;

hi Bell                 border: 0 none; background-color: #0b2830;
hi ErrorMsg             color: #003549; background: #da4b8e; font-weight: bold;


"Hint section
hi Hint               	font-family: monospace; font-size: 12px; font-weight: bold; color: #da4b8e; background-color: #0b2830; border: solid 1px #036495;
hi Hint::after          content: attr(number);
hi HintActive           background: #c7fefe; color: #fefefe;
hi HintElem             background-color: #0b2830; color: #a3be8c;
hi HintImage            opacity: .5;

"Other important stuff
hi InfoMsg              color: #c7fefe; background: #0b2830;
hi Message              white-space: normal; min-width: 100%; padding-left: 2em; text-indent: -2em; display: block;
hi WarningMsg           color: red; background: #0b2830;
hi ModeMsg              color: #c7fefe; background: #0b2830; "CmdLine when Not in Use
hi MoreMsg              color: #c7fefe; background: #0b2830;
hi NonText              color: lightblue; min-height: 16px; padding-left: 2px;
hi Question             color: #fefefe; background: #0b2830; font-weight: bold;
hi Function             color: lightgreen; background: #0b2830;
hi Number               color: tan; background: #0b2830
hi String               color: #0b2830; background: #c7fefe;
hi Tag                  color: #0b2830; background: #c7fefe;
hi Title                color: #0b2830; background: #c7fefe; font-weight: bold;
hi URL                  text-decoration: none; color: lightblue; background: inherit;
hi URL:hover            text-decoration: underline; cursor: pointer;
hi LineNr               color: #c7fefe; background: #0b2830;

"style -name statusbar chrome://* <<EOM
"#status-bar statusbarpanel { padding: 0 1px !important; }
"statusbarpanel > * { margin: 0 !important; padding: 0 2px 0 0 !important; }
"EOM

